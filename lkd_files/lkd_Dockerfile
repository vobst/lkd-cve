# Dockerfile for the debugging container
FROM docker.io/archlinux

ARG PROJECTA
ENV PROJECTE=${PROJECTA}

RUN pacman -Syu --noconfirm && pacman -S --noconfirm \
	base-devel \
	git \
	pwndbg \
	python-pwntools \
	sudo \
	vim \
	zsh

WORKDIR /tmp
COPY lkd_scripts_sh/lkd_docker_create_user.sh .
RUN chmod +x lkd_docker_create_user.sh && \
	./lkd_docker_create_user.sh && \
	rm ./lkd_docker_create_user.sh

WORKDIR /${PROJECTE}
RUN chmod 777 .

WORKDIR /root
RUN git clone https://github.com/vobst/dotfiles.git && \
	./dotfiles/scripts/install.sh

WORKDIR /home/dbg
USER dbg
RUN git clone https://github.com/vobst/dotfiles.git && \
	./dotfiles/scripts/install.sh

WORKDIR /${PROJECTE}
CMD ["/bin/zsh"]
